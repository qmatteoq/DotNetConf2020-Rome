<Window x:Class="GeolocationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeolocationApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <StackPanel Margin="12" HorizontalAlignment="Left" Width="500">
        <TextBlock Text="Geolocation Sample" FontSize="32" />
        <Button Content="Get position" Click="OnGetPosition" />
        <TextBlock x:Name="txtLatitude" FontSize="24" />
        <TextBlock x:Name="txtLongitude" FontSize="24" />
    </StackPanel>
    
</Window>
